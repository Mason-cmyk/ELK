---
- name: My first playbook
  hosts: webservers
  become: true
  tasks:

  - name: Install apache httpd (state=present is optional)
    apt:
      name: apache2
      state: present



###

---
- name: Configure Elk VM with Docker
  hosts: elk
  remote_user: sysadmin
  become: true
  tasks:
    # Use apt module
    - name: Install docker.io
      apt:
        update_cache: yes
        name: docker.io
        state: present
      # Use apt module
    - name: Install pip3
      apt:
        force_apt_get: yes
        name: python3-pip
        state: present
      # Use pip module
